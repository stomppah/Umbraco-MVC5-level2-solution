            <a href="#" class="thumbnail pop" data-container="body" data-toggle="popover" data-content="Has been a member since @memberProfile.CreationDate.ToString("dd MMM yyyy",Model.CurrentCulture)" data-original-title="@memberProfile.Name">
                @if (avatarProperty != null && !String.IsNullOrEmpty(avatarProperty.Value))
                {
                    <img src="@avatarProperty.Value?height=70">
                }
                else
                {
                    <p>Tick 'Use in Profile' on the Avatar property for your MemberType and upload an avatar!</p>
                }
            </a>
