@using Umbraco.Web
@inherits UmbracoTemplatePage
@{
    Umbraco.Web.Models.ProfileModel memberProfile = default(Umbraco.Web.Models.ProfileModel);
    Umbraco.Web.Models.UmbracoProperty avatarProperty = default(Umbraco.Web.Models.UmbracoProperty);
    if (Members.IsLoggedIn())
    {
        memberProfile = Members.GetCurrentMemberProfileModel();
        avatarProperty = (memberProfile != null && memberProfile.MemberProperties != null) ? memberProfile.MemberProperties.FirstOrDefault(f => f.Alias == "avatar") : default(Umbraco.Web.Models.UmbracoProperty);
    }
}
<div class="page-header">
    <h1>uWatercooler <small> - hanging out at the uWatercooler today...</small></h1>
</div>

<div class="row">
    @if (memberProfile != null)
